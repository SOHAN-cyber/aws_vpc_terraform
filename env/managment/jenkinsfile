pipeline{
    agent any
  tools {
  terraform 'terraform'
}
    stages{
        stage("Deploying  Infra"){
            steps{
                dir('network') {
                sh 'pwd'
                sh 'ls'
                sh 'terraform init'
                sh 'terraform fmt'
                sh 'terraform apply pwd--auto-approve'
                }
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
